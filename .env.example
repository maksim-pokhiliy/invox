# ===========================================
# Required
# ===========================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/getpaid?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-super-secret-key-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# App
APP_URL="http://localhost:3000"

# Edition — controls feature availability
# "community" (default): open registration, self-hosted features
# "pro": closed registration (invite-only), premium features
# NEXT_PUBLIC_GETPAID_EDITION="community"

# ===========================================
# Optional
# ===========================================

# Email (Resend) — required for sending invoices via email
# Get your API key at https://resend.com
# RESEND_API_KEY="re_your_resend_api_key"
# EMAIL_FROM="invoices@yourdomain.com"

# Banking Integration (Salt Edge) — optional, enables bank connection & auto-matching
# Get credentials at https://www.saltedge.com
# SALT_EDGE_APP_ID="your_salt_edge_app_id"
# SALT_EDGE_SECRET="your_salt_edge_secret"
# SALT_EDGE_BASE_URL="https://www.saltedge.com/api/v6"

# Cron — secret for authenticating cron sync requests
# CRON_SECRET="your_cron_secret"
